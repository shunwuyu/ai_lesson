generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  name      String    @unique @db.VarChar(255)
  password  String    @db.VarChar(255)
  createdAt DateTime? @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime? @default(now()) @map("updated_at") @db.Timestamptz(6)
  posts Post[]
  comments  Comment[] 
  likes UserLikePost[]
  @@map("users")
}

model Post {
  id      Int     @id @default(autoincrement())
  // title 对应 varchar(255)
  title   String  @db.VarChar(255)
  
  // content 对应 longtext，在 PostgreSQL 中映射为 Text
  // String? 表示允许为 NULL (对应 MySQL 的 DEFAULT NULL)
  content String? @db.Text
  
  // userId 对应 int(11)，允许为 NULL
  userId  Int?

  // 建立与 User 表的关系
  // onDelete: SetNull 表示用户删除后，帖子的 userId 设为 null（对应原表允许 null 的逻辑）
  user    User?   @relation(fields: [userId], references: [id], onDelete: SetNull)
  comments Comment[] 
  tags PostTag[]
  likes UserLikePost[]
  // 对应 MySQL 中的 KEY `userId` (`userId`)
  @@index([userId])

  // 映射到数据库中实际的表名 "posts"
  @@map("posts")
}

model Comment {
  id        Int      @id @default(autoincrement())
  // content 对应 longtext，PostgreSQL 中使用 Text
  content   String?  @db.Text
  
  postId    Int
  userId    Int
  parentId  Int?     // 对应 DEFAULT NULL，用于自关联

  // 1. 关联到 Post
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  // 2. 关联到 User
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // 3. 自关联：父评论与回复（子评论）
  // @relation("CommentToComment") 必须命名，因为一个模型内有两个字段指向同一个模型
  parent    Comment? @relation("CommentToComment", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Comment[] @relation("CommentToComment")

  // 对应 MySQL 中的 KEY 索引
  @@index([postId])
  @@index([userId])
  @@index([parentId])

  // 映射到数据库表名 "comments"
  @@map("comments")
}

model Tag {
  id   Int    @id @default(autoincrement())
  
  // name 对应 varchar(255) 且具有 UNIQUE 约束
  name String @unique @db.VarChar(255)

  // 如果你需要实现多对多关联（一个标签对应多个帖子，一个帖子有多个标签）
  posts PostTag[]

  @@map("tags")
}

model PostTag {
  postId Int
  tagId  Int

  // 关系定义
  // onDelete: Cascade 确保删除帖子或标签时，中间表的记录也被清理
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  // 对应 MySQL 的 PRIMARY KEY (`postId`, `tagId`)
  @@id([postId, tagId])

  // 对应 MySQL 的 KEY `tagId` (`tagId`)
  // 注意：PostgreSQL 会自动为主键的第一列创建索引，
  // 但为了优化按标签查询帖子的性能，需要为第二列 tagId 显式创建索引
  @@index([tagId])

  // 映射到数据库表名 "post_tags"
  @@map("post_tags")
}

model UserLikePost {
  userId Int
  postId Int

  // 关系定义
  // 注意：此处 references: [id] 对应的模型是 User 和 Post
  // onDelete: Cascade 建议开启，用户或帖子删除时自动清理点赞记录
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  // 对应 MySQL 的 PRIMARY KEY (`userId`, `postId`)
  @@id([userId, postId])

  // 对应 MySQL 的 KEY `postId` (`postId`)
  @@index([postId])

  // 如果你希望遵循之前的复数建议，可以改为 "user_like_posts"
  // 这里先严格对应你提供的 SQL 表名
  @@map("user_like_posts")
}