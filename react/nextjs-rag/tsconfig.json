{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext", // ğŸ‘ˆ å…³é”®ï¼Œä½¿ç”¨ ESM
    "moduleResolution": "NodeNext", // ğŸ‘ˆ å…³é”®ï¼ŒåŒ¹é… Node.js ESM è¡Œä¸º
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
